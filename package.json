{
  "name": "svendeproeve-pocketbase-web",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "docker-full": "npm run docker-build && npm run docker-tag && npm run docker-push",
    "docker-build": "cross-var docker build -t svendeproeve-pocketbase-web .",
    "docker-tag": "cross-var docker tag svendeproeve-pocketbase-web docker.koldskl.xyz/svendeproeve-pocketbase-web:latest && cross-var docker tag svendeproeve-pocketbase-web docker.koldskl.xyz/svendeproeve-pocketbase-web:$npm_package_version",
    "docker-push": "docker push docker.koldskl.xyz/svendeproeve-pocketbase-web:latest && cross-var docker push docker.koldskl.xyz/svendeproeve-pocketbase-web:$npm_package_version"
  },
  "devDependencies": {
    "@skeletonlabs/skeleton": "2.10.0",
    "@skeletonlabs/tw-plugin": "0.4.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^5.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.13",
    "@types/eslint": "^8.56.7",
    "@types/node": "20.12.13",
    "autoprefixer": "10.4.19",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "postcss": "8.4.38",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prisma": "^5.14.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "3.4.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0-alpha.20",
    "vite": "^5.0.3",
    "vite-plugin-tailwind-purgecss": "0.3.3"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "1.6.5",
    "@prisma/client": "^5.14.0",
    "highlight.js": "11.9.0",
    "pocketbase": "^0.21.2",
    "svelte-pocketbase": "^0.0.4"
  }
}
